        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://" 
                    value="{{teacher.avatar_url}}"
                >
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
                <input 
                    type="text" 
                    name="name" 
                    placeholder="Nome do professor" 
                    value="{{teacher.name}}"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth" 
                    value="{{teacher.birth}}"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select  name="educational_level">
                    <option 
                        value="valor1" 
                        {%if teacher.educational_level=='valor1'%}selected 
                        {%endif%} selected>
                        Ensino Médio Completo
                    </option>
                    <option 
                        value="valor2" 
                        {%if teacher.educational_level=='valor2'%}selected 
                        {%endif%}>
                        Ensino Superior Completo
                    </option>
                    <option 
                        value="valor3" 
                        {%if teacher.educational_level=='valor3'%}selected 
                        {%endif%}>
                        Mestrado
                    </option>
                    <option 
                        value="valor4" 
                        {%if teacher.educational_level=='valor4'%}selected 
                        {%endif%}>
                        Doutorado
                    </option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <span>
                <input 
                    type="radio" 
                    name="type_class" 
                    value="Presencial" 
                    {%if teacher.type_class=='Presencial'%}checked 
                    {%endif%}>
                    Presencial
            </span>
            <span>
                <input 
                    type="radio" 
                    name="type_class" 
                    value="À distancia" 
                    {%if teacher.type_class=='À distancia'%}checked 
                    {%endif%}>
                    À distância
            </span>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text" 
                    name="occupation" 
                    placeholder="Separe as áreas por vírgula" 
                    value="{{teacher.occupation}}"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>