{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/teacher/create">Novo</a>
    <table>
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {%for teacher in teachers%}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}</td>
                <td class="occupation_table">{{teacher.occupation}}</td>
                <td><a href="/teachers/{{teacher.id}}">VER</a></td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>
{% endblock content %}

